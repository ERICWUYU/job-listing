<div class="col-md-12">

  <div class="job">
    <%= link_to"Add a job", new_job_path, class: "btn btn-primary pull-right" %>

  </div>
  <h2 class="text-center">我的职缺汇总</h2>
  <table class="table table-hover">
  <tbody>
    <% @jobs.each do |job| %>
    <% if current_user && current_user == job.user %>
    <tr>
      <td><%= link_to(job.title, job_path(job)) %></td>

      <td>
        <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-primary")%>
        <%= link_to("Delete", job_path(job), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" } )%>

      </td>

      <td><%= job.created_at %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>
