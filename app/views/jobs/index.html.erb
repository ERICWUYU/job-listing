<div class="col-md-12">
  <div class="job">
    <%= link_to("Add a job", new_job_path, class: "btn btn-info pull-right") %>
  </div><br>
  <br>
  <div class="dropdown pull-right">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">排序
    <span class="caret"></span></button>
      <ul class="dropdown-menu">
        <li><%= link_to("按薪资上限排序") %></li>
        <li class="divider"></li>
        <li><%= link_to("按薪资下限排序") %></li>
        <li class="divider"></li>
        <li><%= link_to("按发表时间排序") %></li>
      </ul>
    </li>

  </div>
  <table class="table table-boldered">
    <thead>
      <tr>
        <td>职缺</td>
        <td>薪资下限</td>
        <td>薪资上限</td>
        <td>刊登时间</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= link_to(job.wage_lower_bound) %></td>
          <td><%= link_to(job.wage_upper_bound) %></td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
